<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicControlActivity" 
    android:background="@drawable/bg3"
    android:id="@+id/layout_music_control">
    
    
    <RelativeLayout
    android:id="@+id/layout_songname"
    android:layout_width="match_parent"
    android:layout_height="60dp"  
    >
    	<ImageButton
			android:id="@+id/btn_back"
			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"			
   			android:layout_alignParentStart="true"
   			android:background="@drawable/login_ban_back_prs"
   			android:layout_marginStart="12dp"
   			android:contentDescription="@string/description"
   			android:layout_centerVertical="true">
		</ImageButton>
		
    	<TextView
    	    android:id="@+id/textview_songname"
    	    android:layout_width="wrap_content"
   			android:layout_height="30dp"	
   			android:layout_marginTop="8dp"
    	    android:layout_centerHorizontal="true"
    	    android:text="@string/songname"
    	    android:textSize="22sp"
    	    android:textColor="#000000"
    	    >
    	</TextView>
    	    
    	<TextView
    	    android:id="@+id/textview_songartist"
    	    android:layout_width="wrap_content"
   			android:layout_height="30dp"
   			android:layout_below="@id/textview_songname"	
   			android:layout_centerHorizontal="true"
    	    android:text="@string/songartist"  
    	    android:textColor="#000000"
    	    android:textSize="15sp"
    	    > 
    	</TextView>
    </RelativeLayout>
    <TextView
    	    android:id="@+id/textview_songlyric"
    	    android:layout_width="match_parent"
   			android:layout_height="match_parent"
   			android:layout_below="@id/textview_songlyric"	
   			android:layout_centerHorizontal="true" 
    	    android:layout_marginBottom="90dp" 
    	    android:textColor="#000000"
    	    android:textSize="25sp"
    	    > 
    </TextView>
    <RelativeLayout
    android:id="@+id/layout_songcontrol"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="90dp"  
    >
    	<ImageButton
    		android:id="@+id/ibtn_delete"
    		android:layout_width="60dp"
   			android:layout_height="60dp"
   			android:layout_alignParentStart="true"
   			android:background="@drawable/like" 
   			android:layout_centerVertical="true"
   			android:contentDescription="@string/description"  
    	    >
    	</ImageButton>
        
        
    </RelativeLayout>
    
    
</RelativeLayout>
